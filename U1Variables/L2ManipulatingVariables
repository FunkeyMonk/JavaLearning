class Manipulate{
    public static void main(String[] args) {
        //--------Arithmetic Operations-------------
        //
        int money1 = 8+6;
        int money2 = 8-6;
        int bank = money1+money2;
        int robbery = bank - 6;
        double richDude = robbery * 10;
        double heist = richDude / 5;

        //modulus T^T (basically just remainder, except i dont understand)
        int bankUsers = 11;
        double amtLeft = heist % bankUsers;

        System.out.println(bank);
        System.out.println(robbery);
        System.out.println(richDude);
        System.out.println(heist);
        System.out.println(amtLeft);

        //-----------Compound Assignment Operators----------
        //
        //basically so that you dont have to write var = var+1, instead u write var+=1
        //you can input any arithmetic operation before = (ex. "+=", "-=", "*=", "/=", and "%=")
        int age = 16;
        age += 1;
        System.out.println(age);

        //ORDER OF OPERATIONS APPLIES

        //-----------Greater than, less than, or equal to?-------------
        //
        //Numerical datatypes that make boolean comparisons = greater than or less than
        int money = -10;
        int minMoney = 0;
        boolean broke = minMoney > money;
        System.out.println("Broke?" + broke);

        //To tell if something is equal, use ==
        //To tell if something is not equal, use !=
        int oldDude = 84;
        int youngDude = 21;
        boolean old = oldDude != youngDude;
        boolean same = oldDude == youngDude;
        System.out.println(old);
        System.out.println(same);

        //You can also use >=(greater than or equal to) or <= (less than or equal to)
        boolean isOldDudeOld = oldDude >= youngDude;
        System.out.println(isOldDudeOld);

        //When comparing objects, use .equals(). Don't use ==
        String voice1 = "Persona!";
        String voice2 = "Personal";
        System.out.println(voice1.equals(voice2));

        //String Concatenation is just adding different variables into the print statement
        String username = "JFlem";
        System.out.println("Your name is " + username);

        //Final Keyword is just unchangeable var
        final int bornYear = 2006;
        System.out.println(bornYear);
        // bornYear = 2005 will cause an error

    }
}
